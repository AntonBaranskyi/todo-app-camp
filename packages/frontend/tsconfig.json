{
	"compilerOptions": {
		"jsx": "react",
		"baseUrl": ".",
		"module": "ES2022",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"composite": true,
		"types": [
			"vite/client"
		],
		"paths": {
			"~assets/*": [
				"src/assets/*"
			],
			"~modules/*": [
				"src/modules/*"
			],
			"~router/*": [
				"src/router/*"
			],
			"~shared/*": [
				"src/shared/*"
			],
			"~store/*": [
				"src/store/*"
			],
			"~typings/*": [
				"src/typings/*"
			],
			"~/*": [
				"src/*"
			],
			"~todos/*": [
				"src/modules/todos/*"
			],
			"~auth/*": [
				"src/modules/auth/*"
			],
			"~todo-store/*": [
				"src/store/todo-store/*"
			],
			"~layouts/*": [
				"src/shared/layouts/*"
			],
			"~common-store/*": [
				"src/store/common-store/*"
			]
		}
	},
	"include": [
		"./src/**/*",
		"./vite.config.ts",
		".eslintrc.cjs"
	],
	"exclude": [
		"./node_modules",
		"test",
		"./dist",
		"**/*spec.ts"
	]
}